{% extends 'base.html.twig' %}

{% block title %}Page de connexion{% endblock %}

{% block body %}
{% if not app.user %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div>
        <div class="row">
            <div class="col-md-6">
                <h1>Bienvenue</h1>
                <p>Vous n'avez pas de compte ? <a href="{{ path('app_signup') }}">Enregistrez-vous ici</a> </p>
                    
                <!-- login form -->
                <form class="form-floating mb-3" action="{{ path('app_login') }}" method="post">

                    <div class="form-floating mb-2">
                        <input type="email" name="_username" value="{{ last_username }}" class="form-control" id="floatingEmail" placeholder="name@example.com">
                        <label for="floatingEmail">Adresse E-mail</label>
                    </div>

                    <div class="form-floating mb-2">
                        <input type="password" name="_password" class="form-control" id="floatingPassword" placeholder="Password">
                        <label for="floatingPassword">Mot de passe</label>
                    </div> 
                        
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" value="" id="terms">
                        <label class="form-check-label" for="terms">
                            Se souvenir de moi
                        </label>
                    </div>

                    <input type="hidden" name="_target_path" value="/" >
                        
                    <div class="d-grid gap-2 mb-4">
                        <button type="submit" class="btn btn-primary" type="button">Se connecter</button>
                    </div>

                    <div class="mb-5">
                        {# <p><a href="{{ path('app_forgotten_password') }}">Forgot your password?</a> </p> #}
                        <p><a href="#">Forgot your password?</a> </p>
                    </div>
                </form>

            </div>
        </div>
    </div>
{% endif %}


{% endblock %}
