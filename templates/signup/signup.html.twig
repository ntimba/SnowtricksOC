{% extends 'base.html.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% block body %}

    {% for successMessage in app.flashes('success') %}
        <div class="alert alert-success" role="alert">
            {{ successMessage }}
        </div>
    {% endfor %}


    <div class="signup mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">

                    {# flash message #}
                    {% for flash_message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ flash_message }}
                        </div>
                    {% endfor %}
                    
                    <h1>Créer un compte</h1>
                    <p>Vous avez déjà un compte ? <a href="{{ path('app_login') }}">Se connecter</a> </p>

                    {{ form(signupForm) }}

                </div>
            </div>
        </div>
    </div>
{% endblock %}
